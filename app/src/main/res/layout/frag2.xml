<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="스마트 검색"
            android:textSize="40sp"/>


        <androidx.appcompat.widget.SearchView
            android:id="@+id/search_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:iconifiedByDefault="false"/>

        <TextView
            android:id="@+id/search_type_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="컨텐츠 유형"
            android:textSize="25sp"
            android:layout_marginTop="10sp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/type_movie_button"
                android:layout_width="100dp"
                android:layout_height="50dp"
                android:text="영화"
                android:textSize="15sp"
                android:layout_margin="10sp"/>

            <Button
                android:id="@+id/type_drama_button"
                android:layout_width="100dp"
                android:layout_height="50dp"
                android:text="드라마"
                android:textSize="15sp"
                android:layout_margin="10sp"/>

        </LinearLayout>

        <TextView
            android:id="@+id/search_genre_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="장르"
            android:textSize="25sp"
            android:layout_margin="10sp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/genre_action_button"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:text="액션"
                android:textSize="13sp"
                android:layout_margin="1sp"
                android:layout_weight=".20"/>

            <Button
                android:id="@+id/genre_comedy_button"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:text="코미디"
                android:textSize="13sp"
                android:layout_margin="1sp"
                android:layout_weight=".20" />

            <Button
                android:id="@+id/genre_fantasy_button"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:text="판타지"
                android:textSize="13sp"
                android:layout_margin="1sp"
                android:layout_weight=".20" />

            <Button
                android:id="@+id/genre_animation_button"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:text="애니메이션"
                android:textSize="12sp"
                android:layout_margin="1sp"
                android:layout_weight=".20" />

            <Button
                android:id="@+id/genre_adventure_button"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:text="어드벤처"
                android:textSize="13sp"
                android:layout_margin="1sp"
                android:layout_weight=".20" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/genre_drama_button"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:text="드라마"
                android:textSize="13sp"
                android:layout_margin="1sp"
                android:layout_weight=".20"/>

            <Button
                android:id="@+id/genre_crime_button"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:text="범죄"
                android:textSize="13sp"
                android:layout_margin="1sp"
                android:layout_weight=".20"/>

            <Button
                android:id="@+id/genre_war_button"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:text="전쟁"
                android:textSize="13sp"
                android:layout_margin="1sp"
                android:layout_weight=".20"/>

            <Button
                android:id="@+id/genre_family_button"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:text="패밀리"
                android:textSize="13sp"
                android:layout_margin="1sp"
                android:layout_weight=".20"/>

            <Button
                android:id="@+id/genre_mystery_button"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:text="미스테리"
                android:textSize="13sp"
                android:layout_margin="1sp"
                android:layout_weight=".20"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_weight=".60">

                <Button
                    android:id="@+id/genre_documentary_button"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:text="다큐멘터리"
                    android:textSize="12sp"
                    android:layout_margin="1sp"
                    android:layout_weight=".20" />

                <Button
                    android:id="@+id/genre_science_button"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:text="공상과학"
                    android:textSize="13sp"
                    android:layout_margin="1sp"
                    android:layout_weight=".20" />

                <Button
                    android:id="@+id/genre_western_button"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:text="서부"
                    android:textSize="13sp"
                    android:layout_margin="1sp"
                    android:layout_weight=".20" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/movie_option1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_weight=".40"
                android:visibility="invisible">

                <Button
                    android:id="@+id/genre_history_button"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_margin="1sp"
                    android:text="역사"
                    android:textSize="13sp"
                    android:layout_weight=".20" />

                <Button
                    android:id="@+id/genre_horror_button"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_margin="1sp"
                    android:text="호러"
                    android:textSize="13sp"
                    android:layout_weight=".20" />

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/movie_option2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:visibility="gone">

            <Button
                android:id="@+id/genre_music_button"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_margin="1sp"
                android:text="뮤직"
                android:textSize="13sp"
                android:layout_weight=".20" />

            <Button
                android:id="@+id/genre_romance_button"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_margin="1sp"
                android:text="로맨스"
                android:textSize="13sp"
                android:layout_weight=".20" />

            <Button
                android:id="@+id/genre_thriller_button"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_margin="1sp"
                android:text="스릴러"
                android:textSize="13sp"
                android:layout_weight=".20"/>

            <Button
                android:id="@+id/genre_tv_button"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_margin="1sp"
                android:text="TV 영화"
                android:textSize="13sp"
                android:layout_weight=".20" />

            <Button
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_margin="1sp"
                android:layout_weight=".20"
                android:background="#00ff0000"/>

        </LinearLayout>

        <TextView
            android:id="@+id/search_date_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="방영일"
            android:textSize="25sp"
            android:layout_margin="10sp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <NumberPicker
                android:id="@+id/picker_start_year"
                android:layout_width="wrap_content"
                android:layout_height="30sp"
                android:layout_margin="10sp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="년   "
                android:textSize="25sp"
                android:layout_gravity="center_vertical"/>

            <NumberPicker
                android:id="@+id/picker_start_month"
                android:layout_width="wrap_content"
                android:layout_height="30sp"
                android:layout_margin="10sp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" 월 부터"
                android:textSize="25sp"
                android:layout_gravity="center_vertical"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <NumberPicker
                android:id="@+id/picker_end_year"
                android:layout_width="wrap_content"
                android:layout_height="30sp"
                android:layout_margin="10sp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="년   "
                android:textSize="25sp"
                android:layout_gravity="center_vertical"/>

            <NumberPicker
                android:id="@+id/picker_end_month"
                android:layout_width="wrap_content"
                android:layout_height="30sp"
                android:layout_margin="10sp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" 월 까지"
                android:textSize="25sp"
                android:layout_gravity="center_vertical"/>
        </LinearLayout>

    </LinearLayout>


</ScrollView>